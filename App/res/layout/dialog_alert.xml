<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/voidify_white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/voidify_green_normal"
        android:gravity="left|center_vertical"
        android:padding="@dimen/padding_level_4" >

        <TextView
            android:id="@+id/dialog_alert_text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dialog Title"
            android:textColor="@color/voidify_white"
            android:textSize="@dimen/font_size_level_1_5" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="left|center_vertical"
        android:minHeight="@dimen/dialog_alert_min_height"
        android:minWidth="@dimen/dialog_alert_min_width"
        android:orientation="vertical"
        android:paddingBottom="@dimen/padding_level_3"
        android:paddingLeft="@dimen/padding_level_4"
        android:paddingRight="@dimen/padding_level_4"
        android:paddingTop="@dimen/padding_level_3" >

        <TextView
            android:id="@+id/dialog_alert_text_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/padding_level_6"
            android:paddingTop="@dimen/padding_level_6"
            android:text="Content"
            android:textColor="@color/voidify_gray_normal"
            android:textSize="@dimen/font_size_level_2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/dialog_alert_btn_cancel"
            style="@style/Voidify_Button_FullSize_Gray"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/button_bottom_full_height"
            android:layout_weight="1"
            android:text="@string/dialog_alert_button_cancel"
            android:textColor="@color/voidify_gray_normal" />

        <Button
            android:id="@+id/dialog_alert_btn_ok"
            style="@style/Voidify_Button_FullSize_Gray"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/button_bottom_full_height"
            android:layout_weight="1"
            android:text="@string/dialog_alert_button_ok"
            android:textColor="@color/voidify_gray_normal" />

    </LinearLayout>

</LinearLayout>