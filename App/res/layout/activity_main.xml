<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/voidify_white"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <ImageView
        android:id="@+id/activity_main_header_image_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo_header" />

    <LinearLayout
        android:id="@+id/activity_guide_linearlayout_pager_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="@dimen/padding_level_1" >

        <TextView
            android:id="@+id/activity_main_text_connect_status_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_level_2"
            android:text="@string/main_info_connected"
            android:textColor="@color/voidify_gray_normal"
            android:textSize="@dimen/font_size_level_3" />

        <ImageView
            android:id="@+id/activity_main_img_connect_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_status_unknow" />

        <TextView
            android:id="@+id/activity_main_text_connect_ssid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_level_2"
            android:text="NUTNWLAN"
            android:textColor="@color/voidify_gray_normal"
            android:textColorHint="@color/voidify_gray_normal"
            android:textSize="@dimen/font_size_level_1"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/activity_main_text_connect_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_level_4"
            android:text="國立臺南大學校園網路"
            android:textColor="@color/voidify_gray_normal"
            android:textColorHint="@color/voidify_gray_normal"
            android:textSize="@dimen/font_size_level_3" />

        <TextView
            android:id="@+id/activity_main_text_connect_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_level_4"
            android:text="此AP支援自動登入"
            android:textColor="@color/voidify_gray_small"
            android:textSize="@dimen/font_size_level_4" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_level_4"
            android:text="@string/main_button_admin"
            android:textColor="@color/voidify_gray_light"
            android:textSize="@dimen/font_size_level_4" />

        <ImageView
            android:id="@+id/activity_main_img_gocontrol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/button_go_control" />

    </LinearLayout>

</RelativeLayout>