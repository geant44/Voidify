<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/voidify_white"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="@dimen/padding_level_2" >

        <TextView
            android:id="@+id/dynamic_page_guid_text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_level_2"
            android:text="Large Text"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/voidify_gray_normal"
            android:textSize="@dimen/font_size_level_1_5" />

        <ImageView
            android:id="@+id/dynamic_page_guid_img_icon"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/pager_guide_icon_max_height"
            android:minHeight="@dimen/pager_guide_icon_min_height"
            android:src="@drawable/guide_1" />

        <TextView
            android:id="@+id/dynamic_page_guid_text_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_level_3"
            android:gravity="center_horizontal"
            android:paddingLeft="@dimen/padding_level_3"
            android:paddingRight="@dimen/padding_level_3"
            android:text="TextView"
            android:textColor="@color/voidify_gray_light"
            android:textSize="@dimen/font_size_level_3" />

    </LinearLayout>

</RelativeLayout>